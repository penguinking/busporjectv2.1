<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:orientation="vertical" android:background="#fffbf9fa" android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:layout_gravity="top" android:orientation="horizontal" android:id="@id/message_top" android:background="@drawable/title_bg" android:layout_width="fill_parent" android:layout_height="wrap_content">

        <Button
            android:id="@id/main_BtnTopLeft"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="3.0dip"
            android:background="@drawable/statelist_common_returnbutton"
            android:gravity="center"
            android:onClick="close"
            android:paddingLeft="5.0dip"
            android:text="返回"
            android:textColor="@color/white"
            android:textSize="16.0dip" />

        <TextView
            android:id="@id/commonTextViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:foregroundGravity="fill_vertical|center"
            android:singleLine="true"
            android:text="掌上公交资讯"
            android:textColor="@android:color/white"
            android:textSize="20.0dip"
            android:textStyle="bold" />

        <Button android:textSize="16.0dip" android:textColor="@color/white" android:gravity="center" android:id="@id/main_BtnTopRight" android:background="@drawable/map_mode_btn" android:visibility="gone" android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginRight="3.0dip" android:layout_alignParentRight="true" android:layout_centerVertical="true" />
    </RelativeLayout>
    <RelativeLayout android:id="@id/message_bottom" android:background="@drawable/nav_bg_h" android:clickable="true" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_alignParentBottom="true">
        <ViewFlipper android:id="@id/flipper" android:layout_width="fill_parent" android:layout_height="wrap_content" android:flipInterval="3000" android:layout_centerVertical="true">

            <TextView
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="朝阳市公共汽车公司"
                android:textSize="16.0sp" />

            <TextView android:textSize="16.0sp" android:gravity="center_horizontal" android:layout_width="fill_parent" android:layout_height="wrap_content" android:text="武汉公交集团成功上线智能公交" />
        </ViewFlipper>
    </RelativeLayout>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@id/message_top"
        android:text="TextView"
        android:textColor="@color/backgroundinfodlg"
        android:textColorHint="@color/backgroundinfodlg"
        android:textSize="20dp"
        android:textStyle="bold" 
         android:gravity="center_horizontal"
        />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@id/message_bottom"
        android:layout_alignParentLeft="true"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/textView1"
        android:text="TextView"
        android:textColor="@color/darkOrange"
        android:textSize="16dp" />

</RelativeLayout>
