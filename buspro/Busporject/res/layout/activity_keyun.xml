<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">
    <RelativeLayout
        android:id="@id/message_top"
        android:layout_width="fill_parent"
        android:layout_height="35dip"
        android:layout_gravity="top"
        android:background="@drawable/main_title_bg"
        android:orientation="horizontal" >

        <TextView
            android:id="@id/commonTextViewTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:foregroundGravity="fill_vertical|center"
            android:singleLine="true"
            android:textColor="@android:color/white"
            android:textSize="15sp"
		 />
    </RelativeLayout>
  	<TableLayout 
  		    android:layout_width="match_parent"
  		    android:layout_height="wrap_content"
  		    android:background="#303030"
			android:layout_marginLeft="4dip"
			android:layout_marginRight="4dip"
			android:layout_marginTop="4dip">
  		    <TableRow
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:layout_marginBottom="0.5dip"
                android:layout_marginTop="0.5dip"
                >
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:background="#6CA6CD"
                    android:gravity="center"
                    android:text="类型"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold" 
                    android:layout_weight="0.4"
                    android:layout_marginLeft="1dip"/>
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dip"
                    android:background="#6E7B8B"
                    android:gravity="center"
                    android:text="班次"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold" 
                    android:layout_weight="0.3"/>
                <TextView
                   android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dip"
                    android:background="#8B8B7A"
                    android:gravity="center"
                    android:text="时间"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold" 
                    android:layout_weight="0.3"/>
                <TextView
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="1dip"
                    android:background="#9BCD9B"
                    android:gravity="center"
                    android:text="票价"
                    android:textColor="#FFFFFF"
                    android:textSize="15sp"
                    android:textStyle="bold" 
                    android:layout_marginRight="1dip"
                   	android:layout_weight="0.3"/>
            </TableRow>
  		</TableLayout>
	<ListView 
	    android:id="@+id/plane_list"
	    android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:cacheColorHint="#00000000">
	</ListView>
            

</LinearLayout>